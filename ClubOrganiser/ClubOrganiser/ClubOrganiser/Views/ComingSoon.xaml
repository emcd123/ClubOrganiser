             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClubOrganiser.Views.ComingSoon">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="HomeButton" Order="Primary" Text="Home" Priority="0"
                    Clicked="HomeButton_Activated"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Feature Coming Soon!"
